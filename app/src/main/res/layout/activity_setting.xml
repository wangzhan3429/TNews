<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View android:layout_width="match_parent"
          android:layout_height="1dp" android:background="@color/grey"/>
    <TextView
        android:id="@+id/setting_fadeback"
        android:layout_marginLeft="10dp"
       android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp" android:text="意见反馈"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp" android:background="@color/grey"/>
    <TextView
        android:id="@+id/setting_changeTitle"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp" android:text="更改主题"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp" android:background="@color/grey"/>
    <TextView
        android:id="@+id/setting_comment"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp" android:text="赏个好评"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp" android:background="@color/grey"/>
    <TextView
        android:id="@+id/setting_recommend"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp" android:text="推荐好友"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp" android:background="@color/grey"/>

</LinearLayout>